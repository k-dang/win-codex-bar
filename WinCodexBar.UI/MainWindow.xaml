<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinCodexBar.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Win Codex Bar">

    <Grid x:Name="RootGrid" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="TitleBarHost"
              Grid.Row="0"
              Height="40"
              Background="Transparent"
              Padding="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Win Codex Bar"
                       Style="{StaticResource AppTitleTextStyle}"
                       FontSize="16"
                       LineHeight="20"
                       VerticalAlignment="Center"/>

            <Border x:Name="TitleBarDragRegion" Grid.Column="1" Background="Transparent"/>
            <Border x:Name="TitleBarRightInset" Grid.Column="2" Background="Transparent" Width="0"/>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="Transparent">
            <Grid x:Name="ContentGrid"
                  Padding="20"
                  RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource AppHeaderCardStyle}">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="2">
                            <TextBlock Text="Provider usage" Style="{StaticResource AppSectionHeaderStyle}"/>
                            <TextBlock Text="Live usage snapshots" Style="{StaticResource AppSubtleTextStyle}"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Click="Settings_Click"
                                Style="{StaticResource AppGhostButtonStyle}"
                                ToolTipService.ToolTip="Settings">
                            <SymbolIcon Symbol="Setting"/>
                        </Button>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Padding="8"
                        CornerRadius="10"
                        Background="{StaticResource AppCardBackgroundBrush}"
                        BorderBrush="{StaticResource AppCardStrokeBrush}"
                        BorderThickness="1">
                    <SelectorBar x:Name="ProviderSelector" SelectionChanged="ProviderSelector_SelectionChanged">
                        <SelectorBarItem x:Name="SelectorCodex" Text="Codex" IsSelected="True"/>
                        <SelectorBarItem x:Name="SelectorClaude" Text="Claude Code"/>
                        <SelectorBarItem x:Name="SelectorDiagnostics" Text="Diagnostics"/>
                    </SelectorBar>
                </Border>

                <Border x:Name="CodexPanel" Grid.Row="2" Style="{StaticResource AppCardStyle}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Codex usage" Style="{StaticResource AppSubtleTextStyle}"/>
                        <ItemsControl ItemsSource="{Binding CodexSnapshots}" Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid RowSpacing="8" Margin="0,0,0,8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding ProviderName}" Style="{StaticResource AppPrimarySubtitleTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SourceLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Spacing="3">
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding PrimaryLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                                <ProgressBar Grid.Column="1"
                                                             Value="{Binding PrimaryPercent}"
                                                             IsIndeterminate="{Binding PrimaryIndeterminate}"
                                                             Maximum="100"
                                                             Style="{StaticResource AppProgressStyle}"/>
                                                <TextBlock Grid.Column="2" Text="{Binding PrimaryPercentText}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding PrimaryReset}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Spacing="3">
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding SecondaryLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                                <ProgressBar Grid.Column="1"
                                                             Value="{Binding SecondaryPercent}"
                                                             IsIndeterminate="{Binding SecondaryIndeterminate}"
                                                             Maximum="100"
                                                             Style="{StaticResource AppProgressStyle}"/>
                                                <TextBlock Grid.Column="2" Text="{Binding SecondaryPercentText}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding SecondaryReset}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Spacing="2">
                                            <TextBlock Text="{Binding AccountLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                            <TextBlock Text="{Binding CreditsText}" Style="{StaticResource AppSubtleTextStyle}"/>
                                            <TextBlock Text="{Binding ErrorText}" Foreground="{ThemeResource SystemErrorTextColor}"/>
                                            <Button Content="Retry"
                                                    Tag="{Binding ProviderKind}"
                                                    IsEnabled="{Binding HasError}"
                                                    Click="RetryProvider_Click"
                                                    HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border x:Name="ClaudePanel" Grid.Row="2" Style="{StaticResource AppCardStyle}" Visibility="Collapsed">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Claude Code usage" Style="{StaticResource AppSubtleTextStyle}"/>
                        <ItemsControl ItemsSource="{Binding ClaudeSnapshots}" Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid RowSpacing="8" Margin="0,0,0,8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding ProviderName}" Style="{StaticResource AppPrimarySubtitleTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SourceLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Spacing="3">
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding PrimaryLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                                <ProgressBar Grid.Column="1"
                                                             Value="{Binding PrimaryPercent}"
                                                             IsIndeterminate="{Binding PrimaryIndeterminate}"
                                                             Maximum="100"
                                                             Style="{StaticResource AppProgressStyle}"/>
                                                <TextBlock Grid.Column="2" Text="{Binding PrimaryPercentText}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding PrimaryReset}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Spacing="3">
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding SecondaryLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                                <ProgressBar Grid.Column="1"
                                                             Value="{Binding SecondaryPercent}"
                                                             IsIndeterminate="{Binding SecondaryIndeterminate}"
                                                             Maximum="100"
                                                             Style="{StaticResource AppProgressStyle}"/>
                                                <TextBlock Grid.Column="2" Text="{Binding SecondaryPercentText}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding SecondaryReset}" Style="{StaticResource AppSubtleTextStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Spacing="2">
                                            <TextBlock Text="{Binding AccountLabel}" Style="{StaticResource AppSubtleTextStyle}"/>
                                            <TextBlock Text="{Binding CreditsText}" Style="{StaticResource AppSubtleTextStyle}"/>
                                            <TextBlock Text="{Binding ErrorText}" Foreground="{ThemeResource SystemErrorTextColor}"/>
                                            <Button Content="Retry"
                                                    Tag="{Binding ProviderKind}"
                                                    IsEnabled="{Binding HasError}"
                                                    Click="RetryProvider_Click"
                                                    HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border x:Name="DiagnosticsPanel" Grid.Row="2" Style="{StaticResource AppCardStyle}" Visibility="Collapsed">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Diagnostics log" Style="{StaticResource AppSubtleTextStyle}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="DiagnosticsFilterComboBox" Grid.Column="1" SelectedIndex="0" SelectionChanged="DiagnosticsFilterComboBox_SelectionChanged">
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="Codex"/>
                                <ComboBoxItem Content="Claude"/>
                            </ComboBox>
                        </Grid>

                        <Border Grid.Row="1"
                                CornerRadius="8"
                                Padding="6,4"
                                Background="{ThemeResource ControlFillColorSecondaryBrush}">
                            <Grid ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="56"/>
                                    <ColumnDefinition Width="64"/>
                                    <ColumnDefinition Width="56"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Timestamp" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="Provider" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="Type" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="Source" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="Message" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                                <TextBlock Grid.Column="5" Text="Duration" FontWeight="SemiBold" Style="{StaticResource AppSubtleTextStyle}"/>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding FilteredDiagnosticsEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="6" Padding="0,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="56"/>
                                                <ColumnDefinition Width="64"/>
                                                <ColumnDefinition Width="56"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="56"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding TimestampText}" FontFamily="Consolas" FontSize="12"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ProviderName}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding EventTypeName}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding SourceMethod}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding Message}" TextTrimming="CharacterEllipsis" Foreground="{Binding MessageForeground}"/>
                                            <TextBlock Grid.Column="5" Text="{Binding DurationText}" FontFamily="Consolas" FontSize="12"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>

