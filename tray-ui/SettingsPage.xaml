<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="tray_ui.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="TitleBarHost"
              Grid.Row="0"
              Height="40"
              Background="Transparent"
              Padding="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Settings"
                       Style="{StaticResource AppTitleTextStyle}"
                       FontSize="16"
                       LineHeight="20"
                       VerticalAlignment="Center"/>

            <Border x:Name="TitleBarDragRegion" Grid.Column="1" Background="Transparent"/>
            <Border x:Name="TitleBarRightInset" Grid.Column="2" Background="Transparent" Width="0"/>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="Transparent">
            <Grid Padding="20" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource AppHeaderCardStyle}">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="2">
                            <TextBlock Text="Settings" Style="{StaticResource AppSectionHeaderStyle}"/>
                            <TextBlock Text="Manage refresh and provider sources" Style="{StaticResource AppSubtleTextStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Cancel" Style="{StaticResource AppGhostButtonStyle}" Click="Cancel_Click"/>
                            <Button Content="Save" Style="{StaticResource AppPrimaryButtonStyle}" Click="Save_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource AppCardStyle}">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Refresh Interval (minutes)" Style="{StaticResource AppSubtleTextStyle}"/>
                            <NumberBox x:Name="SettingsRefreshMinutesBox" Minimum="1" Maximum="120" />
                        </StackPanel>

                        <StackPanel Spacing="6">
                            <TextBlock Text="Codex Provider" Style="{StaticResource AppSectionHeaderStyle}"/>
                            <CheckBox x:Name="SettingsCodexEnabledBox" Content="Enable Codex usage"/>
                            <TextBlock Text="Codex source" Style="{StaticResource AppSubtleTextStyle}"/>
                            <ComboBox x:Name="SettingsCodexSourceBox">
                                <ComboBoxItem Content="Auto"/>
                                <ComboBoxItem Content="OAuth"/>
                                <ComboBoxItem Content="Web (Cookies)"/>
                                <ComboBoxItem Content="CLI"/>
                            </ComboBox>
                            <TextBlock Text="Codex cookie source" Style="{StaticResource AppSubtleTextStyle}"/>
                            <ComboBox x:Name="SettingsCodexCookieSourceBox">
                                <ComboBoxItem Content="Auto"/>
                                <ComboBoxItem Content="Manual"/>
                            </ComboBox>
                            <TextBox x:Name="SettingsCodexCookieHeaderBox" PlaceholderText="Codex cookie header (manual)"/>
                        </StackPanel>

                        <StackPanel Spacing="6">
                            <TextBlock Text="Claude Code Provider" Style="{StaticResource AppSectionHeaderStyle}"/>
                            <CheckBox x:Name="SettingsClaudeEnabledBox" Content="Enable Claude Code usage"/>
                            <TextBlock Text="Claude source" Style="{StaticResource AppSubtleTextStyle}"/>
                            <ComboBox x:Name="SettingsClaudeSourceBox">
                                <ComboBoxItem Content="Auto"/>
                                <ComboBoxItem Content="OAuth"/>
                                <ComboBoxItem Content="Web (Cookies)"/>
                                <ComboBoxItem Content="CLI"/>
                            </ComboBox>
                            <TextBlock Text="Claude cookie source" Style="{StaticResource AppSubtleTextStyle}"/>
                            <ComboBox x:Name="SettingsClaudeCookieSourceBox">
                                <ComboBoxItem Content="Auto"/>
                                <ComboBoxItem Content="Manual"/>
                            </ComboBox>
                            <TextBox x:Name="SettingsClaudeCookieHeaderBox" PlaceholderText="Claude cookie header (manual)"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
