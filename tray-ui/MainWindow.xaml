<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="tray_ui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Win Codex Bar">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="RootGrid" Padding="20" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="4">
                <TextBlock Text="Win Codex Bar" Style="{ThemeResource TitleTextBlockStyle}"/>
                <TextBlock Text="Token usage summary" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Settings" Click="Settings_Click"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Padding="16" CornerRadius="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Spacing="12">
                <TextBlock Text="Provider usage" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <ItemsControl ItemsSource="{Binding ProviderSnapshots}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid RowSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding ProviderName}" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SourceLabel}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="1" Spacing="4">
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding PrimaryLabel}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <ProgressBar Grid.Column="1"
                                                         Value="{Binding PrimaryPercent}"
                                                         IsIndeterminate="{Binding PrimaryIndeterminate}"
                                                         Maximum="100"
                                                         Height="8"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PrimaryPercentText}"/>
                                        </Grid>
                                        <TextBlock Text="{Binding PrimaryReset}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Spacing="4">
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding SecondaryLabel}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <ProgressBar Grid.Column="1"
                                                         Value="{Binding SecondaryPercent}"
                                                         IsIndeterminate="{Binding SecondaryIndeterminate}"
                                                         Maximum="100"
                                                         Height="8"/>
                                            <TextBlock Grid.Column="2" Text="{Binding SecondaryPercentText}"/>
                                        </Grid>
                                        <TextBlock Text="{Binding SecondaryReset}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Spacing="2">
                                        <TextBlock Text="{Binding AccountLabel}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{Binding CreditsText}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{Binding ErrorText}" Foreground="{ThemeResource SystemErrorTextColor}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Today" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding TodayTotal}" Style="{ThemeResource TitleTextBlockStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Last 7 days" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding Last7DaysTotal}" Style="{ThemeResource TitleTextBlockStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Last 30 days" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding Last30DaysTotal}" Style="{ThemeResource TitleTextBlockStyle}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="3" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Last session" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding LastSessionSummary}" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Diagnostics" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ItemsControl ItemsSource="{Binding DiagnosticsLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Label}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Value}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Padding="12" CornerRadius="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Daily history" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ItemsControl ItemsSource="{Binding DailyTotals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Date}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalTokens}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
            
        <ContentDialog x:Name="SettingsDialog"
                       Grid.RowSpan="4"
                       Title="Settings"
                       PrimaryButtonText="Save"
                       SecondaryButtonText="Cancel"
                       DefaultButton="Primary"
                       PrimaryButtonClick="SettingsDialog_PrimaryButtonClick">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Padding="0" RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Log Roots" Style="{ThemeResource SubtitleTextBlockStyle}"/>

                    <Grid Grid.Row="1" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListView x:Name="SettingsRootsList" SelectionMode="Single"/>
                        <TextBox x:Name="SettingsRootInput" Grid.Row="1" PlaceholderText="Add a folder path"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                            <Button Content="Add" Click="SettingsAddRoot_Click"/>
                            <Button Content="Remove Selected" Click="SettingsRemoveRoot_Click"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="2" Spacing="8">
                        <TextBlock Text="Refresh Interval (minutes)"/>
                        <NumberBox x:Name="SettingsRefreshMinutesBox" Minimum="1" Maximum="120" SpinButtonPlacementMode="Compact"/>
                        <CheckBox x:Name="SettingsWatchChangesBox" Content="Watch file changes (experimental)"/>

                        <TextBlock Text="Codex Provider" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <CheckBox x:Name="SettingsCodexEnabledBox" Content="Enable Codex usage"/>
                        <TextBlock Text="Codex source"/>
                        <ComboBox x:Name="SettingsCodexSourceBox">
                            <ComboBoxItem Content="Auto"/>
                            <ComboBoxItem Content="OAuth"/>
                            <ComboBoxItem Content="Web (Cookies)"/>
                            <ComboBoxItem Content="CLI"/>
                        </ComboBox>
                        <TextBlock Text="Codex cookie source"/>
                        <ComboBox x:Name="SettingsCodexCookieSourceBox">
                            <ComboBoxItem Content="Auto"/>
                            <ComboBoxItem Content="Manual"/>
                        </ComboBox>
                        <TextBox x:Name="SettingsCodexCookieHeaderBox" PlaceholderText="Codex cookie header (manual)"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </ContentDialog>
        </Grid>
    </ScrollViewer>
</Window>
